@model Factory.Models.Engineer

<h4>Add a new engineer</h4>

<div class="inner-pane">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name, new {@class = "form-label" })
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control", @required = true})
    <button class="btn btn-input" type="submit">Add new engineer</button>
  }
</div>

@Html.ActionLink("Show all engineers", "Index", new { }, new {@role = "button", @class="btn"})