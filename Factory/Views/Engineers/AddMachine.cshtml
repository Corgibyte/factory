@model Factory.Models.Engineer

<h2>Add a machine certification for engineer</h2>

<h4>Add machine certification for: @Html.DisplayFor(model => model.Name)</h4>

@if (ViewBag.MachineCount > 0)
{
  <div class="inner-pane">
  @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.EngineerId)

      @Html.Label("Select machine")
      @Html.DropDownList("MachineId")

      <button class="btn btn-input" type="submit">Add certification</button>
    }
  </div>
}
else
{
  <h6>No eligible machines to certify</h6>
}

@Html.ActionLink($"Back to {Model.Name}", "Details", new { id = Model.EngineerId }, new {@role="button", @class="btn"})