@model Factory.Models.Engineer

<h2>Edit</h2>

<h4>Edit this engineer: @Html.DisplayFor(model => model.Name)</h4>

<div class="inner-pane">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.EngineerId)

    @Html.LabelFor(model => model.Name, new {@class="form-label"})
    @Html.TextBoxFor(model => model.Name, new {@class="form-control", @required = true})

    <button class="btn btn-input" type="submit">Edit engineer</button>
  }
</div>

@Html.ActionLink("Back to engineers", "Index", new { }, new { @role="button", @class="btn" })