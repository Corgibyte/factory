@using Factory.Models;
@model List<Factory.Models.Engineer>

<h1>Engineers</h1>

<div class="inner-pane">
  @if (@Model.Count == 0)
  {
    <h3>No engineers have been added yet!</h3>
  }

  <div class="btn-group-vertical" role="group">
    @foreach (Engineer engr in Model)
    {
      @Html.ActionLink($"{engr.Name}", "Details", new { id = engr.EngineerId }, new { @role="button", @class="btn" })
    }
  </div>
</div>

<div class="btn-group-vertical" role="group">
  @Html.ActionLink("Add new engineer", "Create", new { }, new { @role="button", @class="btn" })
  @Html.ActionLink("Home", "Index", "Home", new { }, new { @role="button", @class="btn" })
</div>