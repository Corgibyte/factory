@using Factory.Models;
@model List<Factory.Models.Engineer>

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}

<ul>
  @foreach (Engineer engr in Model)
  {
    <li>@Html.ActionLink($"{engr.Name}", "Details", new { id = engr.EngineerId })</li>
  }
</ul>

<div class="btn-group-vertical" role="group">
  @Html.ActionLink("Add new engineer", "Create", new { }, new { @role="button", @class="btn" })
  @Html.ActionLink("Home", "Index", "Home", new { }, new { @role="button", @class="btn" })
</div>