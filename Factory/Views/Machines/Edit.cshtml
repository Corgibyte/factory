@using Factory.Models;
@model Factory.Models.Machine

<h2>Edit</h2>

<h4>Edit this machine: @Html.DisplayFor(model => model.Name)</h4>

<div class="inner-pane">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.LabelFor(model => model.Name, new {@class="form-label"})
    @Html.TextBoxFor(model => model.Name, new {@class="form-control", @required = true})

    @Html.Label("Machine status:")
    <select asp-for="@Model.Status" asp-items="Html.GetEnumSelectList<MachineStatus>()"></select>

    <button class="btn btn-input" type="submit">Submit changes</button>
  }
</div>

@Html.ActionLink("Back to machines", "Index", new { }, new { @role="button", @class="btn" })