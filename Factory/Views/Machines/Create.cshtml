@model Factory.Models.Machine

<h4>Add a new machine</h4>

<div class="inner-pane">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name, new {@class = "form-label" })
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control", @required = true})
    <button class="btn btn-input" type="submit">Add new machine</button>
  }
</div>

@Html.ActionLink("Show all machines", "Index", new { }, new {@role = "button", @class="btn"})