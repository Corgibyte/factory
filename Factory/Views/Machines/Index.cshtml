@using Factory.Models;
@model List<Factory.Models.Machine>

<h1>Machines</h1>

<div class="inner-pane">
  @if (Model.Count == 0)
  {
    <h3>No machines have been added yet!</h3>
  }

  <div class="btn-group-vertical" role="group">
    @foreach (Machine machine in Model)
    {
      <a href="/Machines/Details/@machine.MachineId" role="button" class="btn"><span class="status-@machine.Status">‚óè</span>@machine.Name</a>
    }
  </div>
</div>

<div class="btn-group-vertical" role="group">
  @Html.ActionLink("Add new machine", "Create", new { }, new { @role="button", @class="btn" })
  @Html.ActionLink("Home", "Index", "Home", new { }, new { @role="button", @class="btn" })
</div>